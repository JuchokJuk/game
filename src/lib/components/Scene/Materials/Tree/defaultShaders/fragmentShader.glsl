void main() {

    // CUSTOM SHADER BEGIN

	vec2 uv = (position_.yz)*0.01;

	float noiseDisplace = snoise(vec3(uv*400., time*0.5));

	uv = vec2(
        uv.x + 0.001 * sin(noiseDisplace * TWOPI),
        uv.y + 0.001 * cos(noiseDisplace * TWOPI)
    );

    vec2 uv0 = uv;
    vec3 finalColor = vec3(0.0625, 0.25, 0.25);
	finalColor *= 0.2;
    
    for (float i = 0.0; i < 8.0; i++) {
        uv = fract(uv * 1.5) - 0.5;

        float d = length(uv*uv) * exp(-length(uv0));

        vec3 col = palette(length(uv0) + i*.6 - time*1.6*0.1);

        d = sin(d*16. - time*0.1)/8.;
        d = abs(d);

        d = pow(0.01 / d, 1.2)/6.;

        finalColor += col * d;
    }
        
    vec3 diffuse = vec3(0.1, 0.1, 0.1) + finalColor;

    // CUSTOM SHADER END

	#include <clipping_planes_fragment>

	vec4 diffuseColor = vec4( diffuse, opacity );
	ReflectedLight reflectedLight = ReflectedLight( vec3( 0.0 ), vec3( 0.0 ), vec3( 0.0 ), vec3( 0.0 ) );
	vec3 totalEmissiveRadiance = emissive;

	#include <logdepthbuf_fragment>
